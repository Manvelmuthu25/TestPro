<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nearest_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_line_gray"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/nearest_img"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:src="@drawable/ic_train_green" />

        <TextView
            android:id="@+id/station_code_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FTC"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/edit_menu_img"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stationname_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="19/02/20017"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stationtype_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="streat"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/km_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="4.1kms"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp" />


    </LinearLayout>

</LinearLayout>