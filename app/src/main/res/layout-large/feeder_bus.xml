<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">


    <TableRow
        android:id="@+id/rout_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fe_busrout_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:background="@drawable/cell_shape"
            android:drawableLeft="@drawable/ic_add_black_24dp"
            android:gravity="center"
            android:padding="5dip"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/fe_from_station"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="5dip"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/fe_to_station"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="5dip"
            android:textColor="@android:color/black" />

    </TableRow>

    <LinearLayout
        android:id="@+id/rout_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <!--sublist1-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:background="@drawable/cell_shape_head"
                android:gravity="center"
                android:padding="5dip"
                android:text="@string/via"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/feed_discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:gravity="left|center"
                android:padding="5dip"
                android:textColor="@android:color/black" />

        </TableRow>
        <!--sublist2-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:background="@drawable/cell_shape_head"
                android:gravity="center"
                android:padding="5dip"
                android:text="@string/Total_No_of_Service"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/fe_number_service"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:gravity="left|center"
                android:padding="5dip"
                android:textColor="@android:color/black" />

        </TableRow>
    </LinearLayout>

    </LinearLayout>