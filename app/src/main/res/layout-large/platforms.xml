<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include
        layout="@layout/back_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/platform_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:background="@drawable/platform_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/platforms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/platform_view"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginRight="-40dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lev_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="-5dp"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/level1_1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/level_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bottom_line"
                        android:gravity="left"
                        android:textSize="16sp"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/level_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="13dp"
                        android:text=""
                        android:textColor="@color/color_white"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/lev_3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/level1_3"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/level_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:textSize="16sp"
                            android:background="@drawable/bottom_line"
                            android:textColor="@color/color_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/level_c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="@color/color_white"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">


                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/track" />

                        <ImageView
                            android:id="@+id/train"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/train" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/track_1" />

                        <ImageView
                            android:id="@+id/train_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/train_1" />

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/platform_view1"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-40dp"
                android:layout_marginTop="-5dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lev_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="80dp"
                    android:background="@drawable/level1_4"
                    android:gravity="bottom|right"
                    android:orientation="vertical"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/level_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:textSize="16sp"
                        android:background="@drawable/bottom_line"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/level_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/color_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lev_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="170dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.99"
                    android:background="@drawable/level1_2"
                    android:gravity="right|bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/level_2"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bottom_line"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/level_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/color_white"
                        android:textSize="14sp" />
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/platform_alrt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Information will be updated soon."
            android:textColor="@color/color_black"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>





