<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center|right"
                    android:textStyle="bold"
                    android:text="Card Balance :"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/card_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:drawableLeft="@drawable/ic_rupee"
                    android:gravity="left|center"
                    android:text=""
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center|right"
                    android:text="As On : "
                    android:textStyle="bold"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/ason_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="4"
                    android:gravity="left|center"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:orientation="horizontal"
                android:padding="15dp">


                <EditText
                    android:id="@+id/rc_amount_edttext"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1.3"
                    android:drawableLeft="@drawable/ic_rupee"
                    android:drawablePadding="10dp"
                    android:hint="Enter Amount"
                    android:inputType="number"
                    android:focusable="true"
                    android:maxLength="4"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="3dp"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/rc_ed_100"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/orang_circle"
                        android:text="₹100"
                        android:textColor="@color/color_white"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/rc_ed_200"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/orang_circle"
                        android:text="₹200"
                        android:textColor="@color/color_white"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/rc_ed_500"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/orang_circle"
                        android:text="₹500"
                        android:textColor="@color/color_white"
                        android:textSize="16sp" />


                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/rc_submitnormal_btn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_bg_btton_blue"
                android:gravity="center"
                android:text="Add Money"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/error_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="@color/ri_txtcolor"
                android:text="@string/expircard"
                android:textSize="20dp"
                android:visibility="gone" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rct_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Recent Transactions"
            android:textColor="@color/color_black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rc_viewallhistrory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="View All"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_transaction_htory"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>
