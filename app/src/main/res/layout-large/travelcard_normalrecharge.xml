<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/t_card_bg"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_logo_h" />

        <TextView
            android:id="@+id/tooltxt_title"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:gravity="left|center"
            android:text="CHENNAI METRO RAIL LIMITED"
            android:textColor="@color/color_white"
            android:textSize="16sp"
            android:textStyle="bold" />



    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/back_user_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_chevron_left"
        android:gravity="center|left"
        android:text="Quick Recharge"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rc_cardNumber_txt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_enter_card_number"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:text=""
            android:textColor="@color/color_black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rc_cardNikname_txt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:text=""
            android:textColor="@color/color_black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
