<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nearest_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_line_gray"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nearestplaces_img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/no_photo" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/edit_menu_img"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nerest_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#BC8D3E"
                android:id="@+id/rating_txt"
                android:textSize="14sp"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/ratingBar" />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:rating="5"
                android:numStars = "5"
                android:layout_marginLeft="5dp"
                android:progressDrawable="@drawable/rating_bar"
                android:id="@+id/ratingBar"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/rating_txt"/>
            <TextView
                android:id="@+id/km_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:textColor="#BC8D3E"
                android:textSize="14dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/ratingBar" />
        </RelativeLayout>


        <TextView
            android:id="@+id/nearest_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/nearest_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text=""
            android:textColor="#BC8D3E"
            android:textSize="18dp" />



    </LinearLayout>

</LinearLayout>