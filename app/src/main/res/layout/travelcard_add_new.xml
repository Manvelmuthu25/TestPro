<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/t_card_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/logout_menu"
        layout="@layout/travelcard_menu_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="5dp"
        android:layout_margin="10dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical"
            android:padding="20dp">


            <EditText
                android:id="@+id/add_cart_number_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_enter_card_number"
                android:drawablePadding="15dp"
                android:hint="Enter Card Number"
                android:windowSoftInputMode="stateHidden"
                android:inputType="number"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/add_card_nikname_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_name"
                android:drawablePadding="20dp"
                android:hint="Enter Nick Name"
                android:windowSoftInputMode="stateHidden"
                android:inputType="text"
                android:textSize="16sp" />

            <Button
                android:id="@+id/add_card"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle_bg_btton_blue"
                android:text="Add Card"
                android:textAllCaps="false"
                android:textColor="@color/color_white" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
