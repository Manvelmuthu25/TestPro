<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

  <!--      <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_setting"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:text="Edit Profile"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="#666666" />-->

        <TextView
            android:id="@+id/change_passwordtxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_changepassword"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:text="Change Password" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="#666666" />

        <TextView
            android:id="@+id/t_all_history"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_receipt"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:text="Transaction History" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="#666666" />


        <TextView
            android:id="@+id/t_sign_out"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_sign_out"
            android:drawablePadding="10dp"
            android:gravity="center|left"
            android:text="Sign Out" />


    </LinearLayout>
</android.support.v7.widget.CardView>