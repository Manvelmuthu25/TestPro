                            <ImageView
                                android:id="@+id/from_image_view"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:src="@drawable/rout_info" />


                            <TextView
                                android:id="@+id/from_rout_name"
