                            android:visibility="gone">


                            <ImageView
                                android:id="@+id/to_image_view"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:src="@drawable/rout_info" />


                            <TextView
                                android:id="@+id/to_rout_name"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:layout_toEndOf="@+id/to_image_view"
                                android:layout_toRightOf="@+id/to_image_view"
                                android:gravity="left|center"
                                android:text="to"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16dp" />

                            <ImageView
                                android:id="@+id/to_status"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/dotted_circle_r"
                                android:padding="7dp"
                                android:src="@drawable/circle_blue" />


                        </RelativeLayout>


                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>


