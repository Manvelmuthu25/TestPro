<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_line_gray"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/flash_layout"
    android:orientation="vertical"
    android:padding="5dp">


    <ImageView
        android:id="@+id/edit_menu_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/news_circle"
        android:gravity="center"
        android:padding="10dp"
        android:src="@drawable/ic_notifications_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/edit_menu_img">

        <TextView
            android:id="@+id/flash_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            android:gravity="left|center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/edit_txt_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/flash_news_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flash_date"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            android:gravity="left|center"
            android:lineSpacingExtra="3dp"
            android:text=""
            android:textColor="@color/color_black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/flash_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="5dp" />
    </RelativeLayout>

</RelativeLayout>