<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/near_bottom_light_blue_line"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/direct_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:lineSpacingExtra="5dp"
            android:paddingLeft="10dp"
            android:text=""
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/near_destance"
            android:layout_toStartOf="@+id/near_destance" />

        <TextView

            android:id="@+id/near_destance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/steps"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>


</LinearLayout>