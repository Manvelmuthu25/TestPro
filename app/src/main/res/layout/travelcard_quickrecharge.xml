<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_logo_h" />

            <TextView
                android:id="@+id/tooltxt_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:gravity="left|center"
                android:text="CHENNAI METRO RAIL LIMITED"
                android:textColor="@color/color_white"
                android:textSize="16sp"
                android:textStyle="bold" />



    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/back_user_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_chevron_left"
        android:gravity="center|left"
        android:text="Quick Recharge"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        android:textStyle="bold" />



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/quick_rc_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1.3"
                android:drawableLeft="@drawable/ic_enter_card_number"
                android:drawablePadding="10dp"
                android:hint="Enter Card Number"
                android:inputType="number"
                android:paddingLeft="3dp"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:orientation="horizontal"
                android:padding="15dp">


                <EditText
                    android:id="@+id/quick_rc_amount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1.3"
                    android:drawableLeft="@drawable/ic_rupee"
                    android:drawablePadding="10dp"
                    android:hint="Enter Amount"
                    android:maxLength="6"
                    android:inputType="number"
                    android:paddingLeft="3dp"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/quick_rc_btn_100"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/orang_circle"
                        android:text="₹100"
                        android:textColor="@color/color_white"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/quick_rc_btn_200"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/orang_circle"
                        android:text="₹200"
                        android:textColor="@color/color_white"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/quick_rc_btn_500"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/orang_circle"
                        android:text="₹500"
                        android:textColor="@color/color_white"
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/quick_rc_submitbtn"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_bg_btton_blue"
                android:gravity="center"
                android:text="Add Money"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
